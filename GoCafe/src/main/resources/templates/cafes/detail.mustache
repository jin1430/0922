{{>layout/header}}
<link rel="stylesheet" href="/css/detail.css">

<main class="max-w-7xl mx-auto px-6 py-8" {{#cafe}}data-cafe-id="{{id}}"{{/cafe}}>
    <!-- 카페 기본 카드 -->
    <section class="bg-white rounded-2xl shadow-lg overflow-hidden mb-8 fade-in">
        <!-- 이미지 갤러리 -->
        <div class="image-gallery p-4">
            <!-- 메인 -->
            <div class="main-image bg-gradient-to-br from-green-100 to-green-200 rounded-xl overflow-hidden flex items-center justify-center">
                {{#mainPhoto}}
                    <img src="{{url}}" alt="{{#cafe}}{{name}}{{/cafe}}" class="w-full h-full object-cover">
                {{/mainPhoto}}
                {{^mainPhoto}}
                    <div class="text-center">
                        <div class="text-6xl mb-4">☕</div>
                        <p class="text-green-700 font-medium">{{#cafe}}{{name}}{{/cafe}}</p>
                    </div>
                {{/mainPhoto}}
            </div>

            <!-- 썸네일 (서버에서 최대 4장으로 제한된 thumbPhotos 제공 권장) -->
            {{#thumbPhotos}}
                <div class="rounded-xl overflow-hidden">
                    <img src="{{cafePhotoUrl}}" alt="{{#cafe}}{{name}}{{/cafe}}" class="w-full h-full object-cover" onerror="this.style.display='none'">
                </div>
            {{/thumbPhotos}}
            {{^thumbPhotos}}
                {{#cafePhotos}}
                    <div class="rounded-xl overflow-hidden thumb-fallback">
                        <img src="{{cafePhotoUrl}}" alt="{{#cafe}}{{name}}{{/cafe}}" class="w-full h-full object-cover" onerror="this.style.display='none'">
                    </div>
                {{/cafePhotos}}
                {{^cafePhotos}}
                    <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl flex items-center justify-center">
                        <div class="text-center">
                            <div class="text-3xl mb-2">🌿</div>
                            <p class="text-green-600 text-sm">인테리어</p>
                        </div>
                    </div>
                    <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl flex items-center justify-center">
                        <div class="text-center">
                            <div class="text-3xl mb-2">🥐</div>
                            <p class="text-green-600 text-sm">디저트</p>
                        </div>
                    </div>
                    <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl flex items-center justify-center">
                        <div class="text-center">
                            <div class="text-3xl mb-2">☕</div>
                            <p class="text-green-600 text-sm">커피</p>
                        </div>
                    </div>
                    <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl flex items-center justify-center">
                        <div class="text-center">
                            <div class="text-3xl mb-2">🪑</div>
                            <p class="text-green-600 text-sm">좌석</p>
                        </div>
                    </div>
                {{/cafePhotos}}
            {{/thumbPhotos}}
        </div>

        <!-- 상단 정보 -->
        <div class="p-8">
            <div class="flex items-start justify-between mb-6">
                <div class="min-w-0">
                    <h1 class="text-3xl font-bold text-gray-800 mb-1 truncate">{{#cafe}}{{name}}{{/cafe}}</h1>
                    <p class="text-gray-600 mb-4 break-words">
                        {{#info}}{{cafeInfo}}{{/info}}{{^info}}자연 친화적인 분위기의 스페셜티 카페{{/info}}
                    </p>

                    <div class="flex items-center flex-wrap gap-3 text-sm text-gray-600">
                        <span>조회수 {{#views}}{{views}}{{/views}}{{^views}}0{{/views}}</span>
                        <span>·</span>
                        <span>등록 {{#creationDateFmt}}{{creationDateFmt}}{{/creationDateFmt}}{{^creationDateFmt}}{{creationDate}}{{/creationDateFmt}}</span>
                        <span>·</span>
                        <span>좋아요 {{cafeGood}} / 아쉬워요 {{cafeBad}}</span>
                    </div>
                </div>

                <div class="flex space-x-3 shrink-0">
                    <!-- 즐겨찾기 (JWT 환경이면 서버에서 CSRF 섹션 비워두면 됨) -->
                    <form method="post" action="/cafes/{{#cafe}}{{id}}{{/cafe}}/favorite/toggle" class="m-0">
                        {{#_csrf}}<input type="hidden" name="{{parameterName}}" value="{{token}}">{{/_csrf}}
                        <button class="bg-green-600 text-white px-6 py-3 rounded-xl hover:bg-green-700 transition-colors" type="submit">
                            {{#isFavorited}}❤️ 즐겨찾기 해제{{/isFavorited}}{{^isFavorited}}🤍 즐겨찾기{{/isFavorited}}
                        </button>
                    </form>

                    {{#cafe}}
                        <a class="bg-gray-100 text-gray-700 px-6 py-3 rounded-xl hover:bg-gray-200 transition-colors"
                           target="_blank"
                           href="https://map.kakao.com/link/to/{{name}},{{lat}},{{lon}}">
                            📍 길찾기
                        </a>
                        {{#phoneNumber}}
                            <a class="bg-white text-green-600 px-6 py-3 rounded-xl hover:bg-gray-50 transition-colors border border-green-200"
                               href="tel:{{phoneNumber}}">
                                ☎️ 전화
                            </a>
                        {{/phoneNumber}}
                    {{/cafe}}
                    {{#isLoggedIn}}
                        <button id="openReviewModal"
                                type="button"
                                class="bg-green-600 text-white px-6 py-3 rounded-xl hover:bg-green-700 transition-colors">
                            ✍️ 리뷰 작성
                        </button>
                    {{/isLoggedIn}}
                    {{^isLoggedIn}}
                        <a href="/login"
                           class="bg-green-600 text-white px-6 py-3 rounded-xl hover:bg-green-700 transition-colors">
                            ✍️ 리뷰 작성 (로그인)
                        </a>
                    {{/isLoggedIn}}
                </div>
            </div>

            <!-- 핵심 정보 카드 -->
            <div class="grid md:grid-cols-3 gap-6">
                <div class="md:col-span-2 grid grid-cols-2 gap-6">
                    <div class="bg-green-50 p-4 rounded-xl">
                        <h3 class="font-semibold text-green-800 mb-2">📍 위치</h3>
                        <p class="text-gray-700 break-words">{{#cafe}}{{address}}{{/cafe}}</p>
                        {{#info}}{{#cafeNotice}}<p class="text-sm text-gray-500 mt-1 break-words">{{cafeNotice}}</p>{{/cafeNotice}}{{/info}}
                    </div>
                    <div class="bg-green-50 p-4 rounded-xl">
                        <h3 class="font-semibold text-green-800 mb-2">⏰ 영업시간</h3>
                        {{#info}}
                            <p class="text-gray-700">오픈: {{cafeOpenTime}}</p>
                            <p class="text-gray-700">마감: {{cafeCloseTime}}</p>
                            {{#cafeHoliday}}<p class="text-sm text-gray-500">휴무: {{cafeHoliday}}</p>{{/cafeHoliday}}
                        {{/info}}
                        {{^info}}
                            <p class="text-gray-500">영업정보가 아직 없어요.</p>
                        {{/info}}
                    </div>
                    <div class="bg-green-50 p-4 rounded-xl">
                        <h3 class="font-semibold text-green-800 mb-2">🏷️ 태그</h3>
                        <div class="flex flex-wrap gap-2">
                            {{#cafeTags}}
                                <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm">
                  {{tagCode}}{{#count}} <small>({{count}})</small>{{/count}}
                </span>
                            {{/cafeTags}}
                            {{^cafeTags}}<span class="text-gray-500">등록된 태그가 없어요.</span>{{/cafeTags}}
                        </div>
                    </div>
                    <div class="bg-green-50 p-4 rounded-xl">
                        <h3 class="font-semibold text-green-800 mb-2">📞 연락처</h3>
                        <p class="text-gray-700">{{#cafe}}{{phoneNumber}}{{/cafe}}</p>
                    </div>
                </div>

                <!-- 실시간/요약 (더미) -->
                <div class="space-y-4">
                    <div class="bg-gradient-to-br from-green-500 to-green-600 text-white p-6 rounded-xl">
                        <h3 class="font-semibold mb-3">🔥 실시간 정보</h3>
                        <div class="space-y-2">
                            <div class="flex justify-between"><span>혼잡도</span><span class="font-medium">보통</span></div>
                            <div class="w-full bg-green-400 rounded-full h-2"><div class="bg-white h-2 rounded-full" style="width:60%"></div></div>
                            <p class="text-sm text-green-100 mt-2">현재 좌석의 60%가 사용중입니다</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- 탭 -->
    <section class="bg-white rounded-2xl shadow-lg mb-8 fade-in">
        <div class="border-b border-gray-200">
            <nav class="flex space-x-8 px-8">
                <button type="button" class="tab-button py-4 px-2 border-b-2 font-medium text-sm tab-active" data-tab="menu">메뉴</button>
                <button type="button" class="tab-button py-4 px-2 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm" data-tab="reviews">리뷰 ({{reviewsCount}})</button>
                <button type="button" class="tab-button py-4 px-2 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm" data-tab="photos">사진</button>
                <button type="button" class="tab-button py-4 px-2 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm" data-tab="map">지도</button>
                {{#isOwner}}<button type="button" id="ownerEditToggle" class="px-4 py-2 rounded-xl border">점주 편집</button>{{/isOwner}}
            </nav>
        </div>

        <!-- 메뉴 탭 -->
        <div id="menu-tab" class="tab-content p-8">
            <ul class="grid md:grid-cols-2 gap-6">
                {{#menus}}
                    <li class="flex justify-between items-center p-4 bg-green-50 rounded-xl">
                        <div class="min-w-0">
                            <h4 class="font-medium text-gray-800 truncate">{{menuName}}</h4>
                            {{#menuPrice}}<p class="text-sm text-gray-600">{{menuPrice}}</p>{{/menuPrice}}
                        </div>
                        <img src="{{menuPhoto}}" alt="{{menuName}}" class="w-20 h-20 object-cover rounded-lg" onerror="this.onerror=null;this.src='/images/placeholder-cafe.jpg'">
                    </li>
                {{/menus}}
                {{^menus}}
                    <li class="text-gray-500">등록된 메뉴가 없어요.</li>
                {{/menus}}
            </ul>
        </div>

        <!-- 리뷰 탭 -->
        <div id="reviews-tab" class="tab-content p-8 hidden">
            <section class="bg-white rounded-2xl shadow p-6 mb-8">
                <h2 class="text-xl font-bold mb-4">리뷰</h2>
                {{#reviews}}
                    <article class="border-b border-gray-100 py-4">
                        <div class="flex items-center justify-between gap-3">
                            <div class="text-sm text-gray-600 truncate">{{nickname}} · {{createdAt}}</div>
                            <form method="post" class="m-0 flex items-center gap-2 shrink-0">
                                {{#_csrf}}<input type="hidden" name="{{parameterName}}" value="{{token}}">{{/_csrf}}
                                <button type="submit" formaction="/reviews/{{id}}/good" class="cg-btn cg-btn--sm cg-btn--success">👍 {{good}}</button>
                                <button type="submit" formaction="/reviews/{{id}}/bad" class="cg-btn cg-btn--sm cg-btn--danger">👎 {{bad}}</button>
                            </form>
                        </div>
                        <p class="mt-2 text-gray-800 whitespace-pre-line break-words">{{content}}</p>
                        {{#photos}}
                            {{#url}}
                                <div class="grid grid-cols-3 gap-2 mt-3">
                                    <img src="{{url}}" alt="review photo" class="w-full h-28 object-cover rounded-md">
                                </div>
                            {{/url}}
                        {{/photos}}
                    </article>
                {{/reviews}}
                {{^reviews}}<div class="text-gray-500">아직 리뷰가 없습니다.</div>{{/reviews}}
            </section>
        </div>

        <!-- 사진 탭 -->
        <div id="photos-tab" class="tab-content p-8 hidden">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                {{#cafePhotos}}
                    <div class="bg-gradient-to-br from-green-100 to-green-200 aspect-square rounded-xl overflow-hidden">
                        <img src="{{cafePhotoUrl}}" alt="{{#cafe}}{{name}}{{/cafe}}" class="w-full h-full object-cover">
                    </div>
                {{/cafePhotos}}
                {{^cafePhotos}}
                    <div class="bg-gradient-to-br from-green-100 to-green-200 aspect-square rounded-xl flex items-center justify-center">
                        <div class="text-center">
                            <div class="text-4xl mb-2">☕</div>
                            <p class="text-green-700 text-sm">사진이 없어요</p>
                        </div>
                    </div>
                {{/cafePhotos}}
            </div>
        </div>

        <!-- 지도 탭 -->
        <div id="map-tab" class="tab-content p-8 hidden">
            <div class="bg-green-50 h-96 rounded-xl flex items-center justify-center">
                <div class="text-center">
                    <div class="text-6xl mb-4">🗺️</div>
                    <h3 class="text-xl font-bold text-green-800 mb-2">{{#cafe}}{{name}}{{/cafe}} 위치</h3>
                    <p class="text-green-600">{{#cafe}}{{address}}{{/cafe}}</p>
                </div>
            </div>
        </div>
    </section>

    <!-- 비슷한 카페 추천 -->
    <section id="similar-section" class="fade-in hidden">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">비슷한 카페 추천</h2>
        <div id="similar-grid" class="grid md:grid-cols-3 gap-6"></div>
    </section>

    {{#isLoggedIn}}
        <!-- 리뷰 작성 모달 -->
        <div id="reviewModal" class="cg-modal hidden" aria-hidden="true">
            <div class="cg-modal__backdrop"></div>
            <div class="cg-modal__panel" role="dialog" aria-modal="true" aria-labelledby="reviewModalTitle">
                <div class="cg-modal__header">
                    <h3 id="reviewModalTitle" class="text-lg font-semibold">리뷰 작성</h3>
                    <button type="button" id="closeReviewModal" class="cg-modal__close" aria-label="닫기">✕</button>
                </div>

                <form id="reviewForm" class="space-y-4"
                      action="/cafes/{{#cafe}}{{id}}{{/cafe}}/reviews"
                      method="post" enctype="multipart/form-data">
                    {{#_csrf}}<input type="hidden" name="{{parameterName}}" value="{{token}}">{{/_csrf}}

                    <input type="hidden" name="cafeId" value="{{#cafe}}{{id}}{{/cafe}}"/>

                    <div>
                        <label class="block text-sm font-medium mb-1">평점</label>
                        <div id="ratingStars" class="flex gap-1 text-2xl cursor-pointer" aria-label="평점 선택">
                            <span data-v="1">★</span><span data-v="2">★</span><span data-v="3">★</span><span data-v="4">★</span><span data-v="5">★</span>
                        </div>
                        <input type="hidden" name="rating" id="ratingInput" value="5"/>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1" for="reviewContent">내용</label>
                        <textarea id="reviewContent" name="reviewContent" rows="5" required
                                  class="w-full border rounded-xl p-3"
                                  placeholder="카페 분위기, 메뉴, 좌석, 소음 등 경험을 들려주세요."></textarea>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1" for="waitingTime">대기시간(분)</label>
                        <input id="waitingTime" name="waitingTime" type="number" min="0" step="1" class="w-40 border rounded-xl p-2" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1" for="companionType">동반자</label>
                        <select id="companionType" name="companionType" class="border rounded-xl p-2">
                            <option value="">선택 안 함</option>
                            <option value="ALONE">혼자</option>
                            <option value="FRIEND">친구</option>
                            <option value="DATE">연인</option>
                            <option value="WORK">업무</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1" for="reviewDate">방문일시</label>
                        <input id="reviewDate" name="reviewDate" type="datetime-local" class="border rounded-xl p-2"/>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1" for="photos">사진 (최대 6장)</label>
                        <input id="photos" name="photos" type="file" accept="image/*" multiple class="w-full"/>
                        <div id="photoPreview" class="grid grid-cols-3 gap-2 mt-2"></div>
                    </div>

                    <div class="flex justify-end gap-2 pt-2">
                        <button type="button" id="cancelReview" class="px-4 py-2 rounded-xl border">취소</button>
                        <button type="submit" class="px-4 py-2 rounded-xl bg-green-600 text-white hover:bg-green-700">등록</button>
                    </div>
                </form>

                {{#isOwner}}
                    <div class="cg-card mt-6">
                        <h2 style="margin:0;font-weight:800">내 카페 미션 등록</h2>
                        <form class="mt-3 grid" style="grid-template-columns:repeat(2,minmax(0,1fr));gap:12px"
                              method="post" action="/cafes/{{#cafe}}{{id}}{{/cafe}}/missions">
                            {{#_csrf}}<input type="hidden" name="{{parameterName}}" value="{{token}}">{{/_csrf}}
                            <input class="cg-input" name="title" placeholder="제목" required>
                            <input class="cg-input" name="dueDate" type="date" required>
                            <textarea class="cg-input" name="description" rows="2" style="grid-column:1/-1" placeholder="설명(선택)"></textarea>
                            <button class="cg-btn cg-btn--primary" style="grid-column:1/-1">등록(관리자 승인 대기)</button>
                        </form>
                    </div>
                {{/isOwner}}
            </div>
        </div>
    {{/isLoggedIn}}
</main>

<script defer src="/js/detail.js"></script>
<script>
    // thumb-fallback가 많으면 4장만 보여주기 (서버 제한 없을 때)
    document.addEventListener('DOMContentLoaded', () => {
      const thumbs = Array.from(document.querySelectorAll('.thumb-fallback'));
      thumbs.slice(4).forEach(el => el.remove());
    });
     document.addEventListener('DOMContentLoaded', () => {
    document.querySelector('.cg-onboarding')?.classList.add('hidden');
  });
</script>

{{>layout/footer}}
